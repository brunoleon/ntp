# sample ntpd configuration file, see ntpd.conf(5)

# Addresses to listen on (ntpd does not listen by default)
#listen on *
#listen on 127.0.0.1
#listen on ::1

# sync to a single server
#server ntp.example.org

# use a random selection of 4 public stratum 2 servers
# see http://twiki.ntp.org/bin/view/Servers/NTPPoolServers
# and http://www.pool.ntp.org/
<% if scope.lookupvar('ntp::server_region') != '' then %>
server 0.<%= scope.lookupvar('ntp::server_region') %>.pool.ntp.org
server 1.<%= scope.lookupvar('ntp::server_region') %>.pool.ntp.org
server 2.<%= scope.lookupvar('ntp::server_region') %>.pool.ntp.org
server 3.<%= scope.lookupvar('ntp::server_region') %>.pool.ntp.org
<% else %>
server 0.pool.ntp.org
server 1.pool.ntp.org
server 2.pool.ntp.org
server 3.pool.ntp.org
<% end %>

